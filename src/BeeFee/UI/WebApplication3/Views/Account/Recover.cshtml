@model WebApplication3.Models.Account.RecoverModel

<form asp-action="Recover" asp-controller="Account" asp-area="" method="post" class="ajax-form">
	<div class="modals--field">
		<div class="input-field@(!String.IsNullOrEmpty(Model.Email)?" with-focus":null)">
			<div class="input-field--b">
				<label class="input-field--l">Электронная почта</label>
				@Html.TextBoxFor(x => x.Email, new { @class = "input-field--i" })
			</div>
			<div class="input-field--t"></div>
		</div>
	</div>
	<div>@Html.ValidationMessage("error")</div>
	<div class="modals--submit">
		<button class="btn is-block" type="submit">Восстановить пароль</button>
	</div>
	<div class="modals--socials">
		<div class="modals--socials-t">Войти через социальную сеть</div>
		<div class="modals--socials-l">
			<a class="modals--social" href="#"><i class="icon-vkontakte"></i></a><a class="modals--social" href="#"><i class="icon-facebook"></i></a><a class="modals--social" href="#"><i class="icon-twitter"></i></a>
		</div>
	</div>
</form>