@model WebApplication3.Areas.Org.Models.TicketPrice.TicketPriceEditModel

<form method="post">
	<div class="validation" asp-validation-summary="ModelOnly"></div>

	<div class="create--field is-big">
		<input class="create--field-i" asp-for="Name" placeholder="Название" />
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>

	<div class="create--field is-big">
		<input class="create--field-i" asp-for="Price" placeholder="Цена" />
		<span asp-validation-for="Price" class="text-danger"></span>
	</div>

	<div class="create--field is-big">
		<input class="create--field-i" asp-for="Count" placeholder="Количество" />
		<span asp-validation-for="Count" class="text-danger"></span>
	</div>

	<div class="create--editor">
		<textarea class="html-editor" rows="10" placeholder="HTML here" asp-for="Template"></textarea>
	</div>

	<div class="create--btn">
		<button class="btn-blue" type="submit">Сохранить</button>
	</div>
</form>

@section Scripts
	{
	<script src="~/lib/ckeditor/ckeditor.js"></script>
	<script>
		$(function () {
			CKEDITOR.replace($(".html-editor")[0]);
		});
	</script>
}