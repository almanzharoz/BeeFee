@using BeeFee.WebApplication.Models.Account
@model BeeFee.WebApplication.Models.Account.LoginViewModel

<h2>Login.</h2>
<div class="row">
	<div class="col-md-8">
		<section>
			<form asp-controller="Account" asp-action="Login" asp-route-returnurl="@Model.ReturnUrl" method="post" class="form-horizontal">
				<div>Login: <input name="login" /></div>
				<div>Password: <input name="pass" type="password" /></div>
				<div class="form-group">
					<div class="col-md-offset-2 col-md-10">
						<button type="submit" class="btn btn-default">Log in</button>
					</div>
				</div>
			</form>
		</section>
	</div>
</div>