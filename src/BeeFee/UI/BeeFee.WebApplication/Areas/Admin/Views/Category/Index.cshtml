@model BeeFee.WebApplication.Areas.Admin.Models.AddCategoryListModel
@{
    ViewData["Title"] = "Index";
}

<h2>All categories</h2>
    
<table class="table">
    <thead>
    <tr>
        <th>Name</th>
        <th>Actions</th>
    </tr>
    </thead>
    
    <tbody>
    @foreach (var categoryProjection in Model.ExistingCategories)
    {
	    <tr>
		    <td>@categoryProjection.Name</td>
		    <td><a asp-action="Remove" asp-route-id="@categoryProjection.Id">Remove</a></td>
	    </tr>
	}
    </tbody>
</table>

<br /><br />

<form asp-action="Add" asp-controller="Category" asp-area="admin" method="post" class="form-horizontal">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="container">
        <div class="form-group">
			<input type="text" class="form-control" asp-for="Name" placeholder="Name" />
            <input type="text" class="form-control" asp-for="Url" placeholder="Url"/>
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Add" class="btn" />
        </div>
    </div>
</form>
